{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "cmake-build",
			"command": "mkdir -p ${workspaceFolder}/ogldev/build && cd ${workspaceFolder}/ogldev/build && cmake .. && make -j3",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}